<?xml version="1.0" encoding="UTF-8" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Team1\SliderList\Block\Widget\Slider" id="team1_sliderlist_slider">
        <label>Slider List</label>
        <description>Slider List</description>
        <parameters>
            <parameter name="slider" sort_order="10" visible="true" xsi:type="text">
                <label>Title Slider</label>
            </parameter>
            <parameter name="photo" xsi:type="block" visible="true" sort_order="10">
                <label translate="true">Photo</label>
                <description translate="true">Contact photo</description>
                <block class="Team1\SliderList\Block\Adminhtml\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>
        </parameters>
    </widget>
</widgets>